source 'https://rubygems.org'

# Database for storing configuration profiles
gem 'mongo'
# Web framework
gem 'sinatra'
# For flashing nice messages
gem 'sinatra-flash'
# Lightweight web serer
gem 'thin'
# Beefier web server
# gem 'puma'
# HTML As Markup Language extension
gem 'haml'
# For managing thin with Procfile
gem 'foreman'
# BeagleBone utilities (like GPIO control!)
gem 'beaglebone'
